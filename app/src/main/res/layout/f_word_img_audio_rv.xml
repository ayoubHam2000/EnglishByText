<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/imageTitle"
        style="@style/EditWord_input_title"
        android:text="@string/images"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/addImageFromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_image_24"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic__add"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imgRv"
        android:layout_below="@+id/imageTitle"
        style="@style/EditWord_RV"
        />

    <TextView
        android:id="@+id/audioTitle"
        style="@style/EditWord_input_title"
        android:text="@string/audios"
        android:layout_below="@+id/imgRv"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/addAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic__add"
        android:backgroundTint="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imgRv"
        android:visibility="visible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audRV"
        android:layout_below="@+id/audioTitle"
        style="@style/EditWord_RV"
        />

</RelativeLayout>