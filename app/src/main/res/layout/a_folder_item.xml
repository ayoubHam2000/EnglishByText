<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="8dp"
    android:id="@+id/parentLayout"
    android:gravity="center"
    android:layout_marginHorizontal="15dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/box_width_radius"
    android:backgroundTint="@color/white"
    >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="78dp"

        >

        <TextView
            android:id="@+id/folderIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "#1"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/folderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="sans-serif-condensed"
            tools:text="Harry Potter And Philisopher Stone And Mali Cali"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/openFolderContent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_forward_24"
            android:backgroundTint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/wordsNumberView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "1"
            android:textSize="12sp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_below="@+id/container"
        />


</RelativeLayout>