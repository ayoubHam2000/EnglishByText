<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="7dp"
    android:id="@+id/mainLayout"
    android:background="@color/white"
    android:backgroundTint="#392FBF2F"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:id="@+id/father"
        android:gravity="center"


        >

        <RelativeLayout
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            >

            <ImageView
                android:id="@+id/item_color"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/my_circle"
                android:backgroundTint="@color/tranBlack50"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignStart="@+id/item_color"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:autoSizeTextType="uniform"
                />

            <ImageView
                android:id="@+id/item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic__edit"
                android:backgroundTint="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/textContent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/headerText"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/playfair_display"
            android:text="Manually add children. Use the same xml as you use now and add in code you can add or delete children"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/wordsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/playfair_display"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent2"
            android:id="@+id/cardView"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_below="@+id/father"
        />



</RelativeLayout>

