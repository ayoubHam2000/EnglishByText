<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnglishByText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="MainActivity_Action_Bar">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="slideBar_header_icons">

        <item name="android:layout_marginEnd">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="slide_item_images">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:backgroundTint">@color/gray2</item>
    </style>

    <style name="slide_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="slide_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="slide_item_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="D_pickColor_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/my_circle</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="wordInfoTitle">
        <item name="android:textColor">@color/orangeWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wordInfoInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="wordInfoInfoDiver">
        <item name="android:layout_height">0.7dp</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>

    <style name="EditWord_input_title">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/abs_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>


    <style name="EditWord_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="EditWord_RV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:nestedScrollingEnabled">false</item>
    </style>

    <style name="EditWord_def_exp_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/abs_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginVertical">7dp</item>
        <item name="drawableEndCompat">@drawable/ic__edit</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditWord_media_item">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="SettingViewBar">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>





<!-- region general -->
    <style name="colorBackground1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

<!--    endregion-->

</resources>